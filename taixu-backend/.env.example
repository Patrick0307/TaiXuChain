# ============================================
# TaiXu Backend Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# Sui Network Configuration (OneChain Testnet)
SUI_RPC_URL=https://rpc-testnet.onelabs.cc:443

# Smart Contract IDs (update after deployment)
PACKAGE_ID=your_package_id_here
REGISTRY_ID=your_registry_id_here
MARKETPLACE_ID=your_marketplace_id_here
MARKET_ID=your_marketplace_id_here

# Sponsor Wallet (pays gas fees for players)
# Export from OneWallet: Settings -> Security -> Export Private Key
SPONSOR_PRIVATE_KEY=your_sponsor_private_key_here

# Weapon Deploy Wallet (owns WeaponMintCap)
WEAPON_DEPLOY_PRIVATE_KEY=your_weapon_deploy_private_key_here

# Weapon Mint Cap ID
WEAPON_MINT_CAP=your_weapon_mint_cap_id_here
WEAPON_MINT_CAP_ID=your_weapon_mint_cap_id_here

# Weapon Upgrade Cap ID (for future contract upgrades)
WEAPON_UPGRADE_CAP_ID=your_upgrade_cap_id_here

# LingStone Configuration
LINGSTONE_PACKAGE_ID=your_package_id_here
LINGSTONE_TREASURY_CAP=your_treasury_cap_id_here

# Game Treasury Wallet (receives LingStone payments from players)
GAME_TREASURY_ADDRESS=your_game_treasury_address_here
GAME_TREASURY_PRIVATE_KEY=your_game_treasury_private_key_here

# Server Configuration
PORT=3001
